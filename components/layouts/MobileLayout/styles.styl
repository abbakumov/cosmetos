// reset ->
html
    box-sizing border-box
    font-size 16px


*, *before, *after
    box-sizing inherit

body, h1, h2, h3, h4, h5, h6, p, ol, ul
    margin 0
    padding 0
    font-weight normal

ol, ul
    list-style none

img
    max-width 100%
    height auto

a
    text-decoration none
    color inherit
// <- reset

h1, h2, h3, h4, h5, h6, p, ol, ul, div, span
    font-family Roboto

// <- common

@media (min-width: 460px)
    .root
        margin: 20px auto
        width: 400px
        border-radius 4px
        box-shadow 0px 0px 200px rgba(173, 130, 120, .8)

.header
    height 50px
    background-color #F5B8A9
    color #fff
    text-align center
    line-height 50px
    font-family "Arial, Helvetica, sans-serif"

.logo
    margin-top 5px
    height 35px

.content
    padding 20px 15px
    font-family "Arial, Helvetica, sans-serif"
