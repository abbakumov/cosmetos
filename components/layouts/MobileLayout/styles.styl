@import '../common/reset'

h1, h2, h3, h4, h5, h6, p, ol, ul, div, span
    font-family Roboto

// <- common

@media (min-width: 460px)
    .root
        margin: 20px auto
        width: 400px
        border-radius 4px
        box-shadow 0px 0px 200px rgba(173, 130, 120, .8)

.header
    height 50px
    background-color #F5B8A9
    color #fff
    text-align center
    line-height 50px
    font-family "Arial, Helvetica, sans-serif"

.logo
    margin-top 13px
    height 22px

.content
    padding 20px 15px
    font-family "Arial, Helvetica, sans-serif"
