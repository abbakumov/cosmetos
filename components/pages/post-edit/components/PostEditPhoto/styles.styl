    padding 12px 16px

.imageContainer
    display block
    line-height 0
    position relative

.imagePlaceholder
    border 1px solid #ccc
    border-radius 2px
    width 100%
    height 248px
    display flex
    align-items center
    justify-content center
    color #777

.imagePickerContainer
    margin-top 8px

.fileButton
    width 100%
    margin-top 6px !important

.imagePickerLabel
    margin-top 8px
    font-size 12px
    color #777
    text-align center
