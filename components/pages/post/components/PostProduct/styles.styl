.root
    border-width 1px
    border-style solid
    border-radius 10px
    display flex
    position relative
    background #fff
    max-height 160px
    transition all .3s
    top 0px
    overflow hidden
    margin-top -18px
    padding-top 16px

.rootHidden
    max-height 0px
    top -32px

.left
    width 56px
    margin 12px
    flex-shrink 0
    display flex
    justify-content center

.img
    align-self center

.content
    margin 20px 30px 20px 0

.title
    font-size 15px
    text-transform uppercase

.brand
    font-size 15px
    margin-top 6px
    text-transform uppercase
    font-weight 500

.comment
    font-style italic
    font-size 13px
    margin-top 5px
    letter-spacing .1px
    color #818181

.arr
    position absolute
    top calc(50% - 10px)
    right 8px
