.root
    display block
    border-width 3px
    border-style solid
    border-radius 10px
    display flex
    position relative

.left
    width 56px
    margin 12px
    flex-shrink 0
    display flex
    justify-content center

.img
    align-self center

.content
    margin 16px 30px 10px 0

.title
    font-size 15px
    text-transform uppercase

.brand
    font-size 15px
    margin-top 6px
    text-transform uppercase
    font-weight 500

.comment
    font-style italic
    font-size 13px
    margin-top 5px
    letter-spacing .1px
    color #818181

.arr
    position absolute
    top calc(50% - 16px)
    right 8px
