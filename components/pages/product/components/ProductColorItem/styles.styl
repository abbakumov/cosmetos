.root
    width 15%
    flex-shrink 0
    margin-top 5px
    position relative

.tooltip
    position absolute
    width 164px // about 3 items
    left calc(50% - 82px)
    bottom calc(100% + 8px)
    height 30px
    z-index 100
    display flex
    justify-content center

.tooltipLeft
    left 0
    justify-content flex-start

.tooltipRight
    left none
    right 0
    justify-content flex-end

.tooltipContent
    display block
    height 100%
    line-height 26px
    padding 0 10px
    border-radius 8px
    box-sizing border-box
    border 2px solid #E5E5E5
    min-width 55px
    text-align center
    background #fff
    font-size 13px
    text-transform uppercase

.tooltipTriangle
    position absolute
    top calc(100% - 2px)
    left calc(50% - 10px)

    &:before
    &:after
        content ''
        font-size 0
        position absolute
        top 0

    &:before
        border 10px solid transparent
        border-top 10px solid #E5E5E5
        left 0

    &:after
        border 7px solid transparent
        border-top 7px solid #fff
        left 3px
