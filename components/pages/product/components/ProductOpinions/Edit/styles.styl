.root
    margin 12px 0
    position relative

.title
    color #333

.counter
    position absolute
    top 4px
    right 0
    color #555
    font-size 14px

.input
    margin-top 6px
    width 100%
    box-sizing border-box
    padding 8px 12px
    border-radius 8px
    border 1px solid #c4c4c4
    outline none
    height 100px
    font-size 14px
    resize none

.controls
    margin 8px 0
