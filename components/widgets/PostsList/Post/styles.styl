.root
    width calc(50% - 10px)
    margin-bottom 18px

.imageContainer
    width 100%
    box-shadow 0px 4px 20px rgba(0, 0, 0, 0.25)
    position relative

    // hack to make it square-shaped
    &:after
        content ''
        padding-bottom 100%
        display block

.image
    width 100%
    height 100%
    display block
    object-fit cover
    position absolute

.imageFade
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba(255, 255, 255, .7)

.imageFadeIcon
    position absolute
    width 40px
    height 40px
    top calc(50% - 20px)
    left calc(50% - 20px)

.name
    margin-top 8px
    display block
    font-size 16px
    font-weight bold
    letter-spacing .3px

.title
    font-size 14px
    margin-top 6px

.name + .title
    margin-top 2px

.color
    margin-top 4px
    display flex

.colorPic
    height 22px
    margin-right 8px

.colorTitle
    text-transform uppercase
    color #4d4c4c
    font-size 12px
    font-style italic
    font-weight 100
    line-height 22px
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    padding-right 2px
