.root
    width calc(50% - 10px)
    margin-bottom 18px

.imageContainer
    width 100%
    box-shadow 0px 4px 20px rgba(0, 0, 0, 0.25)
    position relative

.image
    width 100%
    display block

.imageFade
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba(255, 255, 255, .7)

.imageFadeIcon
    position absolute
    width 40px
    height 40px
    top calc(50% - 20px)
    left calc(50% - 20px)

.name
    margin-top 4px
    display block
    font-size 16px
    font-weight bold
    letter-spacing .3px

.title
    font-size 14px
    margin-top 6px
